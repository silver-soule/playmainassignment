# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                                 controllers.HomeController.index

GET     /signup                           controllers.SignUpController.signUp

POST    /signup                           controllers.SignUpController.signUpPost()

GET     /home                             controllers.UserProfileController.home()

GET     /login                            controllers.LoginController.login()

POST    /login                            controllers.LoginController.loginPost()

POST    /home                             controllers.UserProfileController.userInfoUpdatePost()

GET     /logout                           controllers.HomeController.logout()

GET     /assignments                      controllers.AssignmentController.displayAssignments()

POST    /assignments                      controllers.AssignmentController.deleteAssignment()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                     controllers.Assets.versioned(path="/public", file: Asset)
